<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/recycler_card_jam_cardview"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="4dp"
    android:paddingTop="4dp"

    android:layout_margin="8dp"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.maps.MapView
                android:id="@+id/recycler_card_jam_map_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cameraZoom="13"
                app:liteMode="true"
                app:mapType="normal" />
            <TextView
                android:id="@+id/recycler_card_jam_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AA000000"

                android:text="QSDQSD"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:gravity="center"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/recycler_card_jam_edit_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_card_jam_edit"
                android:textColor="@color/black"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/recycler_card_jam_delete_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_card_jam_delete"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>